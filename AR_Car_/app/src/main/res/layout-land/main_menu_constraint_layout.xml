<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".MainMenu"
    android:theme="@style/AppThemeDark"
    tools:showIn="@layout/main_menu">

    <Button
        android:id="@+id/start_game"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_orange_button"
        android:drawableRight="@drawable/play_icon2"
        android:drawablePadding="2dip"
        android:onClick="startIsPressed"
        android:paddingLeft="60dip"
        android:paddingRight="0dip"
        android:singleLine="true"
        android:text="Start Game"
        app:layout_constraintBottom_toTopOf="@+id/change_car"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/change_car"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/main_orange_button"
        android:drawableRight="@drawable/car_icon3"
        android:drawablePadding="2dip"
        android:onClick="onButtonShowPopupWindowClick"
        android:paddingLeft="57dip"
        android:paddingRight="20dip"
        android:singleLine="true"
        android:text="Choose Car"
        app:layout_constraintBottom_toTopOf="@+id/options"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/start_game" />

    <Button
        android:id="@+id/options"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="70dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="70dp"
        android:layout_marginBottom="40dp"
        android:background="@drawable/main_orange_button"
        android:drawableRight="@drawable/settings_icon"
        android:drawablePadding="2dip"
        android:onClick="SettingsPopUp"
        android:paddingLeft="57dip"
        android:paddingRight="20dip"
        android:singleLine="true"
        android:text="Options"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/change_car" />
</androidx.constraintlayout.widget.ConstraintLayout>